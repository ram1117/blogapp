<div class="sign-up-form">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="sign-field">
    <%= f.label :name,'Full Name' %><br />
    <%= f.text_field :name,class:'input-items' %>
  </div>

  <div class="sign-field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, size:'25x5', class:'input-items' %>
  </div>

  <div class="sign-field">
    <%= f.label :photo,'Profile photo url' %><br />
    <%= f.text_field :photo, class:'input-items'  %>
  </div>

  <div class="sign-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input-items'  %>
  </div>

  <div class="sign-field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'input-items'  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input-items'  %>
  </div>

  <div class="sign-actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>


